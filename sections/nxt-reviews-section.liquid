{% schema %}
{
  "name": "Testimonials Section",
  "tag": "section",
  "class": "nxt-reviews__area",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "People love Babbel"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "Want to immerse yourself in your new language? Dive into a world of language learning content."
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Top Padding",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 72
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F2EAF9"
    }
  ],
  "blocks": [
    {
      "type": "testimonial_card",
      "name": "Testimonial Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "review_image",
          "label": "Review Image"
        },
        {
          "type": "text",
          "id": "review_name",
          "label": "Review Name",
          "default": "Maggie B."
        },
        {
          "type": "text",
          "id": "designation",
          "label": "Designation",
          "default": "TUMx Professional, Certificate Program in Lean Six Sigma"
        },
        {
          "type": "text",
          "id": "review_text",
          "label": "Review Text",
          "default": "This course helped me think about the person I want to be. The mental space that it afforded me allowed me to broaden my horizons and think about opportunities I hadn't considered before."
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Testimonials Section",
      "category": "Testimonials",
      "blocks": [
        {
          "type": "testimonial_card",
          "settings": {
            "review_name": "Maggie B.",
            "designation": "TUMx Professional, Certificate Program in Lean Six Sigma",
            "review_text": "This course helped me think about the person I want to be. The mental space that it afforded me allowed me to broaden my horizons and think about opportunities I hadn't considered before."
          }
        },
        {
          "type": "testimonial_card",
          "settings": {
            "review_name": "Danielle D.",
            "designation": "TUMx Professional, Certificate Program in Lean Six Sigma",
            "review_text": "One employer was very interested in my boot camp experience and couldn't believe all I learned in just six months. I ended up getting that job."
          }
        },
        {
          "type": "testimonial_card",
          "settings": {
            "review_name": "Slim C.",
            "designation": "TUMx Professional, Certificate Program in Lean Six Sigma",
            "review_text": "One employer was very interested in my boot camp experience and couldn't believe all I learned in just six months. I ended up getting that job."
          }
        }
      ]
    }
  ]
}
{% endschema %}
{% style %}
  .nxt-reviews__container {
    background: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top | times: 0.6 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.6 | round: 0 }}px;
    padding-left: 43px;
    padding-right: 43px;
  }
    @media (min-width: 768px) {
      .nxt-reviews__container {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
    /* Reviews Area */
    .nxt-reviews__area {
            padding: 0 15px;
        }
         .nxt-reviews__container{
            width: 100%;
            max-width: 1300px;
            background: #F2EAF9;
            border-radius: 7px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            gap: 50px;
        }

        /* Header Section */
        .nxt-reviews__header {
            width: 100%;
            max-width: 546px;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            gap: 25px;
            text-align: center;
        }

        .nxt-reviews__title {
            color: #5A287D;
            font-size: 56px;
            font-family: 'Knile', serif;
            font-weight: 400;
            word-wrap: break-word;
            line-height: 1.2;
            margin: 0;
        }

        .nxt-reviews__subtitle {
            color: #151515;
            font-size: 18px;
            font-family: 'Inter', sans-serif;
            font-weight: 400;
            line-height: 1.5;
            word-wrap: break-word;
            margin: 0;
        }

        /* Cards Container */
        .nxt-reviews__cards {
            width: 100%;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            gap: 23.12px;
            flex-wrap: wrap;
        }

        /* Individual Card */
        .nxt-reviews__card {
            flex: 1 1 0;
            min-width: 300px;
            height: auto;
            min-height: 268.81px;
            padding: 21.68px;
            background: #FDFAFF;
            border-radius: 11.56px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            gap: 34.69px;
            position: relative;
        }

        /* Card Content */
        .nxt-reviews__card-content {
            display: flex;
            flex-direction: column;
            gap: 21px;
        }

        .nxt-reviews__quote-icon {
            width: 59px;
            height: 59px;
            margin-top: -45px;
        }

        .nxt-reviews__testimonial {
            color: #151515;
            font-size: 14px;
            font-family: 'Inter', sans-serif;
            font-weight: 400;
            line-height: 22.40px;
            word-wrap: break-word;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 4;
            -webkit-box-orient: vertical;
            margin: 0;
        }

        /* Profile Section */
        .nxt-reviews__profile {
            display: flex;
            align-items: center;
            gap: 8.67px;
        }

        .nxt-reviews__avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            flex-shrink: 0;
            display: flex;
        }

        .nxt-reviews__profile-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 2.89px;
        }

        .nxt-reviews__name {
            color: #151515;
            font-size: 12px;
            font-family: 'Inter', sans-serif;
            font-weight: 600;
            line-height: 19.20px;
            word-wrap: break-word;
        }

        .nxt-reviews__title-desc {
            color: #151515;
            font-size: 12px;
            font-family: 'Inter', sans-serif;
            font-weight: 400;
            line-height: 19.20px;
            word-wrap: break-word;
        }

        /* Responsive Design */
        @media (max-width: 1199px) {
            .nxt-reviews__container {
                max-width: 100%;
                padding: 50px 30px;
            }

            .nxt-reviews__title {
                font-size: 48px;
            }
        }

        @media (max-width: 991px) {
            .nxt-reviews__container {
                padding: 40px 20px;
            }

            .nxt-reviews__title {
                font-size: 40px;
            }

            .nxt-reviews__subtitle {
                font-size: 16px;
            }

        }

        @media (max-width: 767px) {
            .nxt-reviews__container {
                padding: 30px 15px;
            }

            .nxt-reviews__container {
                gap: 30px;
            }

            .nxt-reviews__title {
                font-size: 32px;
            }

            .nxt-reviews__cards {
                flex-direction: column;
                gap: 40px;
            }

            .nxt-reviews__card {
                min-width: 100%;
                padding: 20px;
            }
        }

        @media (max-width: 575px) {
            .nxt-reviews__title {
                font-size: 28px;
            }

            .nxt-reviews__subtitle {
                font-size: 14px;
            }

            .nxt-reviews__card {
                padding: 15px;
                min-height: auto;
            }

            .nxt-reviews__testimonial {
                font-size: 13px;
                line-height: 20px;
            }
        }
{% endstyle %}

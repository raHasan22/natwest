{% style %}
  .rh-method-section {
    background: #ffffff;
    padding: 0px 10px;
  }
  .rh-method-section .container_rh {
    max-width: 1300px;
    background: #f2eaf9;
    margin: 0 auto;
    padding: 50px 20px;
    border-radius: 7px;
  }
  .rh-method-section .container_rh .sec-title {
    font-family: "Knile", sans-serif;
  font-weight: 400;
  font-size: 56px;
  line-height: 100%;
  letter-spacing: 0%;
  text-align: center;
  color: #5A287D;
  margin: 0 0 25px;
  }
  .rh-method-section .container_rh .sec-des {
    font-family: "Inter", sans-serif;
  font-weight: 400;
  font-size: 18px;
  line-height: 120%;
  letter-spacing: normal;
  text-align: center;
  color: #151515;
  margin: 0 0 50px;
  }
  .rh-method-section .container_rh .rh-flex-method {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 772px;
    margin: 0 auto;
    gap: 30px;
  }
  .rh-method-section .container_rh .rh-flex-method .rh-method-card {
    padding: 20px;
    width: 30%;
    background: #fff;
    border-radius: 5px;
    box-shadow: 2px 4px 15px 0px #0000000D;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 16px;
    transition: all 0.3s ease;
  }

  /* Highlighted/featured card styling */
  .rh-method-section .container_rh .rh-flex-method .rh-method-card-highlighted {
    padding: 57px 20px;
    width: 40%;
  }

  .rh-method-section .container_rh .rh-flex-method .rh-method-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(90, 40, 125, 0.15), 0 4px 12px rgba(0, 0, 0, 0.1);
  }
  .rh-method-section .container_rh .rh-flex-method .rh-method-card .rh-method-card-img img {
    width: 48px;
    height: 48px;
    object-fit: contain;
  }
  .rh-method-section .container_rh .rh-flex-method .rh-method-card .rh-method-card-content{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 15px;
  }
  .rh-method-section .container_rh .rh-flex-method .rh-method-card .rh-method-card-content .rh-method-card-title{
    font-family: "Inter", sans-serif;
  font-weight: 400;
  font-size: 22px;
  line-height: 32px;
  letter-spacing: normal;
  text-align: center;
  color: #151515;
  margin: 0;
  }
  .rh-method-section .container_rh .rh-flex-method .rh-method-card .rh-method-card-content .rh-method-card-des{
    font-family: "Inter", sans-serif;
  font-weight: 400;
  font-size: 18px;
  line-height: 24px;
  letter-spacing: normal;
  text-align: center;
  color: #151515;
  margin: 0;
  }

  /* Method Section Responsive Design */
  @media (max-width: 1200px) {
    .rh-method-section .container_rh {
      padding: 45px 20px;
    }
    .rh-method-section .container_rh .sec-title {
      font-size: 48px;
      margin: 0 0 20px;
    }
    .rh-method-section .container_rh .sec-des {
      font-size: 16px;
      margin: 0 0 40px;
    }
    .rh-method-section .container_rh .rh-flex-method {
      gap: 25px;
    }
    .rh-method-section .container_rh .rh-flex-method .rh-method-card {
      padding: 18px;
      gap: 14px;
    }
    .rh-method-section .container_rh .rh-flex-method .rh-method-card-highlighted {
      padding: 50px 18px;
    }
    .rh-method-section .container_rh .rh-flex-method .rh-method-card .rh-method-card-content .rh-method-card-title {
      font-size: 20px;
      line-height: 28px;
    }
    .rh-method-section .container_rh .rh-flex-method .rh-method-card .rh-method-card-content .rh-method-card-des {
      font-size: 16px;
      line-height: 22px;
    }
  }

  @media (max-width: 992px) {
    .rh-method-section .container_rh {
      padding: 40px 20px;
    }
    .rh-method-section .container_rh .sec-title {
      font-size: 42px;
      margin: 0 0 18px;
    }
    .rh-method-section .container_rh .sec-des {
      font-size: 16px;
      margin: 0 0 35px;
    }
    .rh-method-section .container_rh .rh-flex-method {
      gap: 20px;
    }
    .rh-method-section .container_rh .rh-flex-method .rh-method-card {
      padding: 16px;
      gap: 12px;
    }
    .rh-method-section .container_rh .rh-flex-method .rh-method-card-highlighted {

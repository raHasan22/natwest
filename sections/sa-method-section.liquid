      height: 36px;
    }
    .rh-method-section .container_rh .rh-flex-method .rh-method-card .rh-method-card-content .rh-method-card-title {
      font-size: 18px;
      line-height: 24px;
    }
    .rh-method-section .container_rh .rh-flex-method .rh-method-card .rh-method-card-content .rh-method-card-des {
      font-size: 15px;
      line-height: 20px;
    }
  }

  @media (max-width: 768px) {

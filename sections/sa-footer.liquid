{% schema %}
{
  "name": "SA Custom Footer",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#5A287D"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "© 2025 Babbel GmbH"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Footer Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column title"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Select menu"
        }
      ]
    },
    {
      "type": "social",
      "name": "Social Media",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Social Media Links"
        },
        {
          "type": "text",
          "id": "facebook_url",
          "label": "Facebook URL"
        },
        {
          "type": "text",
          "id": "twitter_url",
          "label": "X (Twitter) URL"
        },
        {
          "type": "text",
          "id": "youtube_url",
          "label": "YouTube URL"
        },
        {
          "type": "text",
          "id": "instagram_url",
          "label": "Instagram URL"
        },
        {
          "type": "text",
          "id": "linkedin_url",
          "label": "LinkedIn URL"
        }
      ]
    },
    {
      "type": "legal",
      "name": "Legal Links",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Legal Links"
        },
        {
          "type": "text",
          "id": "imprint_text",
          "label": "Imprint text",
          "default": "Imprint"
        },
        {
          "type": "url",
          "id": "imprint_url",
          "label": "Imprint link"
        },
        {
          "type": "text",
          "id": "terms_text",
          "label": "Terms text",
          "default": "Terms & Conditions"
        },
        {
          "type": "url",
          "id": "terms_url",
          "label": "Terms link"
        },
        {
          "type": "text",
          "id": "privacy_text",
          "label": "Privacy text",
          "default": "Privacy Statement"
        },
        {
          "type": "url",
          "id": "privacy_url",
          "label": "Privacy link"
        },
        {
          "type": "text",
          "id": "personal_info_text",
          "label": "Personal info text",
          "default": "Do Not Sell or Share My Personal Information"
        },
        {
          "type": "url",
          "id": "personal_info_url",
          "label": "Personal info link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Footer",
      "category": "Custom",
      "blocks": [
        {
          "type": "column",
          "settings": {
            "title": "Courses"
          }
        },
        {
          "type": "column",
          "settings": {
            "title": "More Babbel"
          }
        },
        {
          "type": "column",
          "settings": {
            "title": "Company"
          }
        },
        {
          "type": "social"
        },
        {
          "type": "legal"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .srs-footer-container {
    background: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 60px 0 0 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    font-family: Inter, Arial, sans-serif;
  }
  .srs-footer-container a {
    text-decoration: none;
    color: {{ section.settings.text_color }};
  }
  .footer-main {
    max-width: 880.14px;
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 0 auto;
    margin-bottom: 40px;
  }
  .footer-col {
    min-width: 200px;
  }
  .footer-col h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 20px;
    margin-top: 0;
    color: #fff;
  }
  .footer-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .footer-col ul li {
    margin-bottom: 12px;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.3;
  }
  .footer-bottom {
    border-top: 1px solid rgba(255,255,255,0.1);
    padding: 45px 0;
    display: flex;
    align-items: center;
    background: {{ section.settings.bg_color }};
  }
  .footer-bottom .container {
    max-width: 1181.44px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .footer-links {
    display: flex;
    gap: 7px;
    flex-wrap: wrap;
    font-size: 12px;
    font-weight: 600;
  }
  .footer-social {
    display: flex;
    gap: 15px;
  }

  @media (max-width: 900px) {
    .footer-main {
      flex-direction: row;
      align-items: flex-start;
      gap: 20px;
      padding: 0 20px;
      justify-content: space-between;
      width: auto;
    }
    .footer-col {
      min-width: auto;
      width: calc(50% - 15px);
      text-align: left;
    }
    .footer-col h3 {
      font-size: 18px;
      margin-bottom: 15px;
    }
    .footer-col ul li {
      font-size: 14px;
      margin-bottom: 10px;
    }
    .footer-bottom .container {
      flex-direction: column;
      gap: 20px;
      padding: 0 20px;
    }
    .footer-links {
      justify-content: center;
      text-align: center;
      gap: 5px;
      font-size: 11px;
    }
    .footer-social {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-container {
      padding: 40px 0 0 0;
    }
    .footer-main {
      padding: 0 15px;
      margin-bottom: 30px;
    }
    .footer-col {
      margin-bottom: 30px;
    }
    .footer-col:last-child {
      margin-bottom: 0;
    }
    .footer-bottom {
      padding: 30px 0;
    }
    .footer-bottom .container {
      padding: 0 15px;
      gap: 25px;
    }
    .footer-links {
      flex-direction: column;
      gap: 8px;
      font-size: 10px;
    }
    .footer-links span {
      display: none;
    }
    .footer-links a {
      padding: 5px 0;
    }
  }
</style>

<footer class="srs-footer-container">
  <div class="footer-main">
    {% for block in section.blocks %}
      {% if block.type == 'column' %}
        <div class="footer-col" {{ block.shopify_attributes }}>
          <h3>{{ block.settings.title }}</h3>
          {% if block.settings.menu != blank %}
            <ul>
              {% for link in linklists[block.settings.menu].links %}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="footer-bottom">
    <div class="container">
      <div class="footer-links">
        <span>{{ section.settings.copyright_text }}</span>
        {% for block in section.blocks %}

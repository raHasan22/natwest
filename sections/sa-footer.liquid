            <span>·</span>
            <a href="{{ block.settings.imprint_url }}">{{ block.settings.imprint_text }}</a>
            <span>·</span>
            <a href="{{ block.settings.terms_url }}">{{ block.settings.terms_text }}</a>
            <span>·</span>
            <a href="{{ block.settings.privacy_url }}">{{ block.settings.privacy_text }}</a>
            <span>·</span>
            <a href="{{ block.settings.personal_info_url }}">{{ block.settings.personal_info_text }}</a>
